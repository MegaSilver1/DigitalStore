@model UtmVitalik.BusinessLogic.DB.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Страница логина</title>
    <link rel="stylesheet" href="../../Vendor/login_style.css">
</head>
<body>
<div class="login-container">
    <img src="../../Content/images/logo-removebg-preview.png" alt="Логотип" class="logo">
    <h2>Вход в аккаунт</h2>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "form-label required" })
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Vitalii Stetiuc" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "form-label required" })
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "********" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            <button type="submit">Войти</button>
            <p id="errorMessage" class="error-message"></p>
            <button class="switch-button" onclick='location.href="@Url.Action("Registration", "Registration")"'> Зарегистрироваться </button>
        </div>
    }
</div>
<script src="../../Vendor/Scripts/lg.js"></script>

</body>
</html>