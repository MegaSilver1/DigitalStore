@{
Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Stun Seed Store - Cart</title>
    <!-- Bootstrap core CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="../../Vendor/fontawesome.css">
    <link rel="stylesheet" href="../../Vendor/stun seed.css">
    <link rel="stylesheet" href="../../Vendor/owl.css">
    <link rel="stylesheet" href="../../Vendor/animate.css">
</head>

<body>

<header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    @Html.Raw("<a href='" + Url.Action("Index", "Home") + "' class='logo'><img src='../../Content/images/logo.png' alt=''></a>")
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Browse", "Browse", "Browse", new { area = "" }, new { @class = "" })</li>
                        <li>@Html.ActionLink("Details", "Details", "Details", new { area = "" }, new { @class = "" })</li>
                        <li>@Html.ActionLink("Cart", "Cart", "Cart", new { area = "" }, new { @class = "" })</li>
                        <li><a href="@Url.Action("UserProfile", "Profile")">Profile @Html.Raw("<img src='" + Url.Content("../../Content/images/profile-header.jpg") + "' alt=''>")</a></li>
                    </ul>
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                </nav>
            </div>
        </div>
    </div>
</header>

<div class="container mt-5 pt-5">
    <div class="row mt-5 pt-5">
        <!-- Cart Items -->
        <div class="col-lg-8 mb-4">
            <div class="cart-items">
                <h4>Your Cart</h4>
                <!-- Header for product details -->
                <div class="row border-bottom py-2" id="cart-header" style="display: none;">
                    <div class="col-md-4" style="color: #593263"><strong>Product Name</strong></div>
                    <div class="col-md-2" style="color: #593263"><strong>Quantity</strong></div>
                    <div class="col-md-2" style="color: #593263"><strong>Price</strong></div>
                    <div class="col-md-2" style="color: #593263"><strong>Remove</strong></div>
                </div>
                <!-- Example Product 1 -->
                <div class="cart-item border-bottom py-3">
                    <div class="row">
                        <div class="col-md-4 d-flex align-items-center">
                            <h5 style="color: #593263">PRODUCT NAME</h5>
                        </div>
                        <div class="col-md-2 d-flex align-items-center">
                            <input type="number" class="form-control quantity" value=@ViewBag.CartItemCount min="1" onchange="updateCart()">
                        </div>
                        <div class="col-md-2 d-flex align-items-center">
                            <h5 class="product-price" style="color: #593263">PRICE</h5>
                        </div>
                        <div class="col-md-2 d-flex align-items-center">
                            <!-- Remove button is removed from here -->
                        </div>
                    </div>
                </div>
                <!-- Add more products similarly -->
            </div>
        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4">
            <div class="cart-summary p-4 border">
                <h4 style="color: #593263">Cart Summary</h4>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Subtotal
                        <span id="subtotal">$0</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Shipping
                        <span id="shipping">$0</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total
                        <span id="total">$0</span>
                    </li>
                </ul>
                <button class="btn btn-primary btn-block mt-3">Checkout</button>
            </div>
        </div>
    </div>
</div>

<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright © 2024 <a href="#">Stun Seed Store</a> Company. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


</body>

</html>
